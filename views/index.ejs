 
<% include ./partials/header %>


<div class="ui main text container">
    <div class="ui huge header"></div>
    <div class="ui top attached segment">
        <div class="ui divided items">
        <%blogsVar.forEach(function(eachBlog){%> 
            <div class="item">
                <img src="<%= eachBlog.image %>" alt="Nature" style="width:100%">
            </div>
            <div class="content">
                <a class="header" href="/blogs/<%= eachBlog._id %>"><%= eachBlog.title%></a>
                <div class="meta">
                    <span><%= eachBlog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- eachBlog.body.substring(0,50)%>...</p>
                </div>
                <div class="extra">
                    <a class="ui blue basic button" href="/blogs/<%= eachBlog._id %>"><%= eachBlog.title%>
                        Read More
                        <i class="right chevron icon"></i>
                    </a>
                </div>
            </div>
        
        <%});%>
        </div>
    </div>
</div>

 <h1><%= currentUser %> </h1>

<% include partials/footer %>
